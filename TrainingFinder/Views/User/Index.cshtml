@model IEnumerable<TrainingFinder.Entities.User>

@{
    ViewBag.Title = "Users";
    Layout = "_Layout";
}


<div clas="text-danger" asp-validation-summary="ModelOnly"></div>
<table class="table table-sm table-bordered">
    <tr><th>ID</th><th>First Name</th><th>Last Name</th><th>Username</th><th>Actions</th></tr>
    @if (!Model.Any())
    {
        <tr><td colspan="5" class="text-center">No users in database!</td></tr>
    }
    else
    {
        foreach (var appUser in Model)
        {
            <tr>
                <td>@appUser.Id</td>
                <td>@appUser.FirstName</td>
                <td>@appUser.LastName</td>
                <td>@appUser.Username</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@appUser.Id" method="get">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@appUser.Id">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>