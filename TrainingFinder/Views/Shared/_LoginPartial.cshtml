@using Microsoft.AspNetCore.Identity
@using TrainingFinder.Models.Users
@inject SignInManager<AdminUser> SignInManager
@inject UserManager<AdminUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark"  asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <a  class="nav-link text-dark"  asp-controller="User" asp-action="Index" title="Users">Manage users</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-controller="Admin" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Admin" asp-action="Register" >Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark"  asp-controller="Admin" asp-action="Login">Login</a>
    </li>
}
</ul>
