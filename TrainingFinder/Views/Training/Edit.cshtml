@model Training

@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit";
}
    <div class="row">
        <div class="col-sm-12 col-md-8 offset-md-2  col-lg-4 offset-lg-4 p-3 border-radius" style="background: #e1e1e1">
            <form asp-controller="Training" asp-action="Save" method="post" enctype="application/x-www-form-urlencoded">

                <div class="form-group" >
                    <input id="TrainingId" class="form-control" name="Id" type="text" value="@Model.TrainingId" hidden />
                </div>
                <div class="form-group" >
                    <label for="GymId">
                        Gym ID
                    </label>
                    <input id="GymId" class="form-control" name="GymId" type="text" value="@ViewBag.Training.GymId"/>
                </div>

                <div class="form-group">
                    <label for="Description">
                        Description
                    </label>
                    <input id="Description" class="form-control" name="Description" type="text" value="@Model.Description" />
                </div>

                <div class="form-group">
                    <label for="DateTime">
                        DateTime
                    </label>
                    <input id="DateTime" name="DateTime" class="form-control" type="text" value="@Model.DateTime" />
                </div>


                <div>
                    <button type="submit" class="btn btn-light" value="submit">submit</button>
                </div>
            </form>
        </div>
    </div>