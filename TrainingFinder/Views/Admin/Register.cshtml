@model TrainingFinder.Models.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "_Layout";
}
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Register" method="post" style="width: 100%; max-width: 520px; padding: 15px; margin: 0 auto;">
    <h1 class="h3 mb-3 font-weight-normal">Register new administrator account</h1>
    <div class="form-group">
        <input asp-for="UserName" class="form-control" placeholder="Username" required="" autofocus="">
    </div>
    <div class="form-group">
            <input asp-for="Email" type="email" class="form-control" placeholder="Email" required="" autofocus="">
        </div>
    <div class="form-group">
    <input type="password" asp-for="Password"  class="form-control" placeholder="Password" required="">
    </div>
    <div class="form-group">
    <input type="password"  asp-for="ConfirmPassword" class="form-control" placeholder="Repeat password" required="">
    </div>
    <button class="btn btn-primary" type="submit">Register</button>
</form>

